{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "esModuleInterop": true,
        "jsx": "react",
        "sourceMap": true,
        // 启用实验性的ES装饰器。
        "experimentalDecorators": true,
        "declaration": false,
        // 决定如何处理模块。
        "moduleResolution": "node",
        // 给源码里的装饰器声明加上设计类型元数据。
        "emitDecoratorMetadata": true,
        // 允许从没有设置默认导出的模块中默认导入。
        "allowSyntheticDefaultImports": true,
        // 禁止对同一个文件的不一致的引用。
        "forceConsistentCasingInFileNames": true,
        // null和 undefined值不包含在任何类型里
        "strictNullChecks": true,
        "typeRoots": [
            "@types",
            "node_modules/@types"
        ],
    },
}